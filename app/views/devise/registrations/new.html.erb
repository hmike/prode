<div class="row">
	<div class="page-header">
		<h1 id="forms">Registrate y empezá a jugar!</h1>
	</div>
</div>
<div class="row">
	<div class="well col-md-4">
		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { :class => ""}) do |f| %>
		<%= devise_error_messages! %>
		<fieldset>
			<!-- <legend>Completá los siguientes campos y en minutos más estarás haciendo tus propios pronosticos</legend> -->
			<div class="form-group"><%= f.email_field :email, :autofocus => true, :class => "", :placeholder => 'email', :required => true %></div>
			<div class="form-group"><%= f.password_field :password, :class => "", :placeholder => "contraseña", :required => true %></div>
			<div class="form-group"><%= f.password_field :password_confirmation, :class => "", :placeholder => "confirmar contraseña", :required => true %>	</div>
			<div class="form-group">
				<%= f.submit "Registrarse", :class => "btn btn-primary btn right signup-btn" %>
				<%= link_to "Cancel", :back, :class => "btn btn-default right cancel-btn" %>
			</div>
		</fieldset>
		<% end %>
	</div>
</div>
