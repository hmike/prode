<div class="row">
	<div class="page-header">
		<h1 id="forms">Registrate y empezá a jugar!</h1>
	</div>
</div>

<div class="row col-md-8">
	<div class="well">
		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { :class => ""}) do |f| %>
		<%= devise_error_messages! %>
		<!-- <form class="bs-example form-horizontal"> -->
		<fieldset>
			<legend>Completá los siguientes campos y en minutos más estarás haciendo tus propios pronosticos</legend>
			<div class="form-group">
				<!-- <label for="inputEmail" class="col-lg-2 control-label">Email</label> -->
				<!-- <%= f.label :email, :class => "" %> -->
				<div class="col-md-10">
					<%= f.email_field :email, :autofocus => true, :class => "", :placeholder => 'email', :required => true %>
					<!-- <input type="text" class="form-control" id="inputEmail" placeholder="Email"> -->
				</div>
			</div>
			<div class="form-group">
				<!-- <label for="inputEmail" class="col-lg-2 control-label">Email</label> -->
				<!--<%= f.label :password, :class => "col-lg-2 control-label" %> -->
				<div class="col-lg-10">
					<%= f.password_field :password, :class => "", :placeholder => "contraseña", :required => true %>
					<!-- <input type="text" class="form-control" id="inputEmail" placeholder="Email"> -->
				</div>
			</div>
			<div class="form-group">
				<!-- <label for="inputEmail" class="col-lg-2 control-label">Email</label> -->
				<!-- <%= f.label :password_confirmation, :class => "col-lg-2 control-label" %> -->
				<div class="col-lg-10">
					<%= f.password_field :password_confirmation, :class => "", :placeholder => "confirmar contraseña", :required => true %>
					<!-- <input type="text" class="form-control" id="inputEmail" placeholder="Email"> -->
				</div>
			</div>
			<div class="form-group">
				<div class="col-lg-10 col-lg-offset-2">
					<!-- <button class="btn btn-default">Cancel</button> -->
					<!-- <button type="submit" class="btn btn-primary">Submit</button> -->
					<%= link_to "Cancel", :back, :class => "btn btn-default" %>
					<%= f.submit "Registrarse", :class => "btn btn-primary" %>
				</div>
			</div>
		</fieldset>
		<% end %>
		<!-- </form> -->
	</div>
</div>
