<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              user_groups_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_user_group_path(@user_group), :class => 'btn' %>
  <%= link_to 'Ver Fixture', user_group_fixture_path, :class => 'btn btn-primary' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              user_group_path(@user_group),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

<!-- Show Memebers -->
<table class="table table-striped col-md-3">
  <thead>
    <tr>
      <th class="col-md-1"></th>
      <th class="col-md-2">Nombre</th>
      <th class="col-md-1">Puntos</th>
      <th class="col-md-1">Aciertos (%)</th>
    </tr>
  </thead>
  <tbody>
    <% @user_group.user_group_members.each do |member| %>
      <tr>
        <td>-</td>
        <td><%= member.user.email %></td>
        <td>-</td>
        <td>-</td>
      </tr>
    <% end %>
  </tbody>
</table>