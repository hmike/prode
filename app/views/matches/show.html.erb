<%- model_class = Match -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:league_id) %>:</strong></dt>
  <dd><%= @match.league_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date) %>:</strong></dt>
  <dd><%= @match.date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:local_team_id) %>:</strong></dt>
  <dd><%= @match.local_team_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:away_team_id) %>:</strong></dt>
  <dd><%= @match.away_team_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:local_score) %>:</strong></dt>
  <dd><%= @match.local_score %></dd>
  <dt><strong><%= model_class.human_attribute_name(:away_score) %>:</strong></dt>
  <dd><%= @match.away_score %></dd>
  <dt><strong><%= model_class.human_attribute_name(:league_date) %>:</strong></dt>
  <dd><%= @match.league_date %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              matches_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_match_path(@match), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              match_path(@match),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
